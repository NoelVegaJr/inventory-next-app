generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Session {
  id     String   @id @unique @default(cuid())
  userId Int @unique
  maxAge DateTime
}

model User {
  id       Int    @id @unique @default(autoincrement())
  email    String 
  password String
}

model Namespace {
  id    Int    @id @unique @default(autoincrement())
  name  String
  items Item[]
}

model Item {
  id           Int       @id @unique @default(autoincrement())
  name         String
  size         Float
  quantity     Int
  location     String
  namespaceId  Int
  unitQuantity String
  unitSize     String
  namespace    Namespace @relation(fields: [namespaceId], references: [id])

  @@index([namespaceId], map: "Item_namespaceId_fkey")
}
